    Title = "CruzHUB - FTF / Xeno Fix",
    Icon = "rbxassetid://140350520713166",
    Author = "Owner: leite",
    Size = UDim2.fromOffset(500, 400),
    Transparent = true,
    Theme = "Dark",
    Resizable = true,
    SideBarWidth = 180,
    ScrollBarEnabled = true,
    User = {Enabled = true, Anonymous = false}
})

win:EditOpenButton({Title = "CruzHUB", Icon = "monitor", Draggable = true})

-- SECTIONS (Opened = true yaparak elementlerin görünmesini garanti altına alıyoruz)
local MainSec = win:Section({Title = "Main Section", Icon = "crown", Opened = true})
local MiscSec = win:Section({Title = "Misc", Icon = "info", Opened = true})

task.wait(0.2) -- UI elementlerinin yüklenmesi için kısa es

