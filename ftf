You're right! Here's the same script but with Kavo UI - the most reliable and Xeno-compatible GUI library:

repeat task.wait() until game:IsLoaded()

-- Kavo UI Library (Best Xeno compatibility)
local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()
local Window = Library.CreateLib("CruzHUB - FTF/Flee The Facility", "DarkTheme")

local rep = game:GetService("ReplicatedStorage")
local runs = game:GetService("RunService")
local httpservice = game:GetService("HttpService")
local ts = game:GetService("TweenService")
local lplr = game:GetService("Players").LocalPlayer

local char = lplr.Character or lplr.CharacterAdded:Wait()
local hum = char:WaitForChild("Humanoid")
local hrp = char:WaitForChild("HumanoidRootPart")

lplr.CharacterAdded:Connect(function(c)
    char = c
    hum = c:WaitForChild("Humanoid")
    hrp = c:WaitForChild("HumanoidRootPart")
end)

getgenv().Settings = {
    Esp = {
        Elements = {},
        Players = false,
        Computers = false,
        Freezers = false,
        Vents = false,
        Exit_Doors = false
    },
    Method = "Metamethod",
    Anti_Failure = false,
    Crawling = 8,
    Hit_Settings = {Distance = 8, Connection = nil},
    Tie_Settings = {Distance = 8, Connection = nil},
    BeastExtension = false
}

-- Main Tab
local MainTab = Window:NewTab("Features")
local MainSection = MainTab:NewSection("Main")
local VisualsSection = MainTab:NewSection("Visuals")
local LocalSection = MainTab:NewSection("LocalPlayer")
local BeastSection = MainTab:NewSection("Beast")

-- Extra Tab
local ExtraTab = Window:NewTab("Extra")
local ExtraSection = ExtraTab:NewSection("Extra Features")

-- Info Tab
local InfoTab = Window:NewTab("Info")
local InfoSection = InfoTab:NewSection("Server Info")

MainSection:NewLabel("CruzHUB - Flee The Facility")
Library:Notify("CruzHUB Loaded Successfully!", 3)

-- Bypass Method
MainSection:NewDropdown("BypassMethod", "Bypass Method", {"Metamethod", "Event"}, function(v)
    getgenv().Settings.Method = v
end)

-- Anti-Failure
local enabled = false
local mt = getrawmetatable(game)
local old = mt.__namecall
setreadonly(mt, false)
mt.__namecall = newcclosure(function(self, ...)
    local args = {...}
    local method = getnamecallmethod()
    if enabled and method == "FireServer" and tostring(args[1]) == "SetPlayerMinigameResult" then
        args[2] = true
    end
    return old(self, unpack(args))
end)
setreadonly(mt, true)

MainSection:NewToggle("AntiFailure", "Anti-Failure", function(state)
    getgenv().Settings.Anti_Failure = state
    if getgenv().Settings.Method == "Metamethod" then
        enabled = state
    elseif getgenv().Settings.Method == "Event" then
        if state then
            task.spawn(function()
                while getgenv().Settings.Anti_Failure do
                    pcall(function()
                        rep.RemoteEvent:FireServer("SetPlayerMinigameResult", true)
                    end)
                    task.wait()
                end
            end)
        end
    end
end)

-- Crawling Speed
LocalSection:NewSlider("CrawlingSpeed", "Crawling Speed", 500, 8, function(s)
    getgenv().Settings.Crawling = s
end)

task.spawn(function()
    local IsCrawling = lplr:WaitForChild("TempPlayerStatsModule"):WaitForChild("IsCrawling")
    IsCrawling:GetPropertyChangedSignal("Value"):Connect(function()
        if IsCrawling.Value then
            hum.WalkSpeed = getgenv().Settings.Crawling
        end
    end)
end)

-- ESP Functions
local function cleanup(plr, Elements)
    local data = Elements["Players"] and Elements"Players"
    if data then
        pcall(function()
            if data.conn then data.conn:Disconnect() end
            if data.hi then data.hi:Destroy() end
            if data.bbg then data.bbg:Destroy() end
        end)
        Elements"Players" = nil
    end
end

local function updatePlayerESP()
    if not getgenv().Settings.Esp.Players then return end
    local Elements = getgenv().Settings.Esp.Elements
    Elements["Players"] = Elements["Players"] or {}

    for _, plr in ipairs(game.Players:GetPlayers()) do
        if plr ~= lplr and plr.Character then
            local stats = plr:FindFirstChild("TempPlayerStatsModule")
            if stats and stats:FindFirstChild("IsBeast") then
                cleanup(plr, Elements)
                pcall(function()
                    local hi = Instance.new("Highlight", plr.Character)
                    hi.FillColor = stats.IsBeast.Value and Color3.new(1,0,0) or Color3.new(0,1,0)
                    hi.OutlineTransparency = stats.IsBeast.Value and 0.5 or 1
                    hi.FillTransparency = 0.5
                    hi.DepthMode = Enum.HighlightDepthMode.AlwaysOnTop

                    Elements"Players" = {
                        hi = hi,
                        conn = stats.IsBeast:GetPropertyChangedSignal("Value"):Connect(function()
                            hi.FillColor = stats.IsBeast.Value and Color3.new(1,0,0) or Color3.new(0,1,0)
                            hi.OutlineTransparency = stats.IsBeast.Value and 0.5 or 1
                        end)
                    }
                end)
            end
        end
    end
end

VisualsSection:NewToggle("PlayerESP", "Player ESP", function(state)
    getgenv().Settings.Esp.Players = state
    local Elements = getgenv().Settings.Esp.Elements
    Elements["Players"] = Elements["Players"] or {}

    if state then
        updatePlayerESP()
        game.Players.PlayerAdded:Connect(function(plr)
            plr.CharacterAdded:Connect(function()
                task.wait(1)
                updatePlayerESP()
            end)
        end)
    else
        for plr in pairs(Elements["Players"] or {}) do
            cleanup(plr, Elements)
        end
    end
end)

VisualsSection:NewToggle("BeastExt", "Beast Name Tags", function(state)
    getgenv().Settings.BeastExtension = state
end)

-- Generic ESP Toggle Function
local function createEspToggle(section, name, setting, color)
    section:NewToggle(name.."ESP", name.." ESP", function(state)
        getgenv().Settings.Esp[setting] = state
        local Elements = getgenv().Settings.Esp.Elements
        Elements[setting] = Elements[setting] or {}

        local function applyESP(obj)
            if obj.Name:lower():find(name:lower()) and not Elementssetting then
                pcall(function()
                    local hi = Instance.new("Highlight", obj)
                    hi.FillColor = color
                    hi.OutlineTransparency = 1
                    hi.FillTransparency = 0.5
                    hi.DepthMode = Enum.HighlightDepthMode.AlwaysOnTop
                    Elementssetting = hi
                end)
            end
        end

        if state then
            for _, obj in ipairs(workspace:GetDescendants()) do
                applyESP(obj)
            end
            Elements[setting].conn = workspace.DescendantAdded:Connect(applyESP)
        else
            if Elements[setting].conn then Elements[setting].conn:Disconnect() end
            for _, hi in pairs(Elements[setting]) do
                if hi then hi:Destroy() end
            end
            Elements[setting] = {}
        end
    end)
end

createEspToggle(VisualsSection, "Computer", "Computers", Color3.new(1,1,1))
createEspToggle(VisualsSection, "Freeze", "Freezers", Color3.new(0.6, 0.8, 1))
createEspToggle(VisualsSection, "Vent", "Vents", Color3.new(0, 0.4, 0.8))
createEspToggle(VisualsSection, "Exit", "Exit_Doors", Color3.new(1, 0.6, 0))

-- Anti Slowness
local antiSlowConn
BeastSection:NewToggle("AntiSlow", "Anti Slowness", function(state)
    if state then
        antiSlowConn = hum:GetPropertyChangedSignal("WalkSpeed"):Connect(function()
            pcall(function()
                local stats = lplr:FindFirstChild("TempPlayerStatsModule")
                local isCrawling = stats and stats:FindFirstChild("IsCrawling")
                if isCrawling and not isCrawling.Value and hum.WalkSpeed < 16 then
                    hum.WalkSpeed = 17
                end
            end)
        end)
    else
        if antiSlowConn then antiSlowConn:Disconnect() end
    end
end)

-- Hit Aura
BeastSection:NewSlider("HitDist", "Hit Distance", 500, 8, function(s)
    getgenv().Settings.Hit_Settings.Distance = s
end)

BeastSection:NewToggle("HitAura", "Hit Aura", function(state)
    if state and not getgenv().Settings.Hit_Settings.Connection then
        getgenv().Settings.Hit_Settings.Connection = runs.RenderStepped:Connect(function()
            for _, plr in ipairs(game.Players:GetPlayers()) do
                if plr ~= lplr and plr.Character and plr.Character:FindFirstChild("HumanoidRootPart") then
                    local dist = (hrp.Position - plr.Character.HumanoidRootPart.Position).Magnitude
                    if dist <= getgenv().Settings.Hit_Settings.Distance then
                        pcall(function()
                            local rag = plr.Character:FindFirstChild("Ragdoll")
                            if not (rag and rag.Value) and char:FindFirstChild("Hammer") then
                                char.Hammer.HammerEvent:FireServer("HammerHit", plr.Character.Head)
                            end
                        end)
                    end
                end
            end
        end)
    elseif getgenv().Settings.Hit_Settings.Connection then
        getgenv().Settings.Hit_Settings.Connection:Disconnect()
        getgenv().Settings.Hit_Settings.Connection = nil
    end
end)

-- Tie Aura
BeastSection:NewSlider("TieDist", "Tie Distance", 500, 8, function(s)
    getgenv().Settings.Tie_Settings.Distance = s
end)

BeastSection:NewToggle("TieAura", "Tie Aura", function(state)
    if state and not getgenv().Settings.Tie_Settings.Connection then
        getgenv().Settings.Tie_Settings.Connection = runs.RenderStepped:Connect(function()
            for _, plr in ipairs(game.Players:GetPlayers()) do
                if plr ~= lplr and plr.Character and plr.Character:FindFirstChild("HumanoidRootPart") then
                    local dist = (hrp.Position - plr.Character.HumanoidRootPart.Position).Magnitude
                    if dist <= getgenv().Settings.Tie_Settings.Distance then
                        pcall(function()
                            local rag = plr.Character:FindFirstChild("Ragdoll")
                            if not (rag and rag.Value) and char:FindFirstChild("Hammer") then
                                char.Hammer.HammerEvent:FireServer("HammerTieUp", plr.Character.HumanoidRootPart, Vector3.new())
                            end
                        end)
                    end
                end
            end
        end)
    elseif getgenv().Settings.Tie_Settings.Connection then
        getgenv().Settings.Tie_Settings.Connection:Disconnect()
        getgenv().Settings.Tie_Settings.Connection = nil
    end
end)

-- Extra Features
ExtraSection:NewButton("ShiftLock", "Load ShiftLock", function()
    loadstring(game:HttpGet("https://github.com/ltseverydayyou/uuuuuuu/blob/main/shiftlock?raw=true"))()
end)

ExtraSection:NewButton("Third Person", "Enable Third Person", function()
    lplr.CameraMode = Enum.CameraMode.Classic
    lplr.CameraMinZoomDistance = 0.5
    lplr.CameraMaxZoomDistance = 400
end)

ExtraSection:NewButton("Force Respawn", "Respawn (Escape Freezer)", function()
    hum.Health = 0
end)

-- Serverhop
ExtraSection:NewButton("Serverhop", "Smallest Serverhop", function()
    task.spawn(function()
        local servers = httpservice:JSONDecode(game:HttpGet("https://games.roblox.com/v1/games/"..game.PlaceId.."/servers/Public?sortOrder=Asc&limit=100"))
        if servers and servers.data[1] then
            ts:TeleportToPlaceInstance(game.PlaceId, servers.data[1].id, lplr)
        end
    end)
end)
